@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>
<p>
    @Html.ActionLink("New Employee", "EmployeeForm", "Employees", null, new {@class = "btn btn-primary"})
</p>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Age</th>
                <th>Description</th>
                <th>Delete</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                    <tr>
                        <td>@Html.ActionLink(employee.Name, "Edit", "Employees", new { id = employee.Id }, null)</td>
                        <td>@employee.Age</td>
                        <td>@employee.Description</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Employees", new{ id = employee.Id}, null)</td>
                    </tr>
                }
        </tbody>
    </table>

